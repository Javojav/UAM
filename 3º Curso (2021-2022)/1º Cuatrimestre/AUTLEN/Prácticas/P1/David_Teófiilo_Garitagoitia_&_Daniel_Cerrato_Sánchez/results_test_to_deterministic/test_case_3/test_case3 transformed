digraph {
  rankdir=LR;

  node [shape = point]; __start_point__
  1[shape=circle]
  2[shape=circle]
  0[shape=circle]
  3[shape=doublecircle]

  __start_point__ -> 0
  0 -> 1[label="a"]
  3 -> 2[label="b"]
  1 -> 1[label="a"]
  2 -> 3[label="a"]
  0 -> 0[label="b"]
  3 -> 1[label="a"]
  1 -> 2[label="b"]
  2 -> 0[label="b"]
}
